{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "SuperWhisper",
  "version": "0.1.0",
  "identifier": "com.superwhisper.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "overlay",
        "title": "SuperWhisper",
        "url": "index.html",
        "width": 400,
        "height": 70,
        "x": 560,
        "y": 30,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": true,
        "skipTaskbar": true,
        "shadow": false
      },
      {
        "label": "settings",
        "title": "SuperWhisper Settings",
        "url": "settings.html",
        "width": 420,
        "height": 650,
        "minWidth": 360,
        "minHeight": 550,
        "maxWidth": 600,
        "maxHeight": 900,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/superwhisper-backend"
    ]
  }
}
